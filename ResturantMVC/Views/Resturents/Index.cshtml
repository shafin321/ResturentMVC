@model   ResturantMVC.ViewModel.ListSearchViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<a asp-controller="Resturents" asp-action="Create"  class="btn btn-primary">Create</a>
<hr />
<form>
    <p>
        Title: <input type="search" asp-for="SearchTearm" />
        <button type="submit">search </button>

        @*<input type="submit" value="Filter" />*@
    </p>
</form>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Location
        </th>
        <th>
            Cusine Type
        </th>
    </tr>


    @foreach(var item in Model.Resturents)
    {
<tr>
    <td>
        @item.Name
    </td>
    <td>
        @item.Location
    </td>

    <td>
        @item.Cusine
    </td>

    <td>
        <a asp-controller="Resturents" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
    <td>
        <a asp-controller="Resturents" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
    </td>

    <td>
        <a asp-controller="Resturents" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
    </td>

</tr>


    }


</table>